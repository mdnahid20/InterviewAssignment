@model ParcelPortal.Models.User

<head>
    <link rel="stylesheet" href="~/css/Login/Index.css">
</head>

<body>
    <form id="loginForm" asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-8">
                <input type="email" name="Email" class="form-control" id="inputEmail3" placeholder="Email" asp-for="Email">
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-8">
                <input type="password" name="Password" class="form-control" id="inputPassword3" placeholder="Password" asp-for="Password" r>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    
    <div class="form-group row">
        <div class="col-sm-3" id="signIn">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
        <div class="col-sm-3">
            <a class="btn btn-primary" asp-action="Index" asp-controller="Register">Register</a>
        </div>
    </div>
    </form>
</body>